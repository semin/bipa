<div class="relative">
  <% relative.level.times do %>
    &nbsp;&nbsp;
  <% end %>
  <% if relative.level < 4 && relative.children.size > 0 %>
    &#43;
  <% else %>
    &#45;
  <% end %>
  <b><%= relative.hierarchy %></b>: <%= link_to "#{relative.description}", hierarchy_scop_path(relative) %>
</div>
