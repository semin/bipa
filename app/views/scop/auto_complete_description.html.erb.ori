<ul>
  <% for scop in @scops -%>
    <li>

    <%= link_to_remote("[<b><span class='hierarchy'>#{scop.hierarchy}" +
                       "</span></b>]: <span class='description'> " +
                       "#{scop.description} </span>",
                       :url => { :action => "show", :id => scop.id },
                       :href => { :action => "show", :id => scop.id },
                       :loading =>  "$('main_content').hide();" +
                                    "$('main_spinner').show()",
                       :complete => "$('main_spinner').hide();" +
                                    "$('main_content').show()",
                       :method => :get) %>
    </li>
  <% end -%>
</ul>
