<table class="stats">

  <tr>
    <th style="border: 0px; background: white;"></th>
    <th style="border-left: 0px">Protein-DNA</th>
    <th>Protein-RNA</th>
  </tr>

  <tr>
    <th style="border-top: 0px">Number of interfaces </th>
    <td><%= @scop.dna_interfaces(@redundancy, @resolution).size %></td>
    <td><%= @scop.rna_interfaces(@redundancy, @resolution).size %></td>
  </tr>

  <tr>
    <th>Average<br />ASA(&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_asa(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_dna_interface_asa(@redundancy, @resolution) %>)
    <td><%= "%.2f" % @scop.mean_rna_interface_asa(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_rna_interface_asa(@redundancy, @resolution) %>)</td>
  </tr>

  <tr>
    <th>Average<br />Hydrogen bonds <br /> (per 100&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_hbonds(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_dna_interface_hbonds(@redundancy, @resolution) %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_hbonds(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_rna_interface_hbonds(@redundancy, @resolution) %>)</td>
  </tr>

  <tr>
    <th>Average<br />Water-mediated hydrogen bonds <br />(per 100&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_whbonds(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_dna_interface_whbonds(@redundancy, @resolution) %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_whbonds(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_rna_interface_whbonds(@redundancy, @resolution) %>)</td>
  </tr>

  <tr>
    <th>Average<br />van der Waals contacts<br />(per 100&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_contacts(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_dna_interface_contacts(@redundancy, @resolution) %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_contacts(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_rna_interface_contacts(@redundancy, @resolution) %>)</td>
  </tr>

  <tr>
    <th>Average<br />Polarity</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_polarity(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_dna_interface_polarity(@redundancy, @resolution) %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_polarity(@redundancy, @resolution) %> (<%= "%.2f" % @scop.stddev_rna_interface_polarity(@redundancy, @resolution) %>)</td>
  </tr>

</table>

<small>* number in a bracket: standard deviation</small>
