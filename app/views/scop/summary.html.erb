<table id="scop_summary_table" border="1px" class="stats">

  <tr class="header">
    <th></th>
    <th>Protein-DNA</th>
    <th>Protein-RNA</th>
  </tr>

  <tr>
    <th>Number of interfaces</th>
    <td><%= @scop.dna_interfaces.size %></td>
    <td><%= @scop.rna_interfaces.size %></td>
  </tr>

  <tr>
    <th>Average<br />ASA(&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_asa %> (<%= "%.2f" % @scop.stddev_dna_interface_asa %>)
    <td><%= "%.2f" % @scop.mean_rna_interface_asa %> (<%= "%.2f" % @scop.stddev_rna_interface_asa %>)</td>
  </tr>

  <tr>
    <th>Average<br />Hydrogen bonds <br /> (per 100&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_hbonds %> (<%= "%.2f" % @scop.stddev_dna_interface_hbonds %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_hbonds %> (<%= "%.2f" % @scop.stddev_rna_interface_hbonds %>)</td>
  </tr>

  <tr>
    <th>Average<br />Water-mediated hydrogen bonds <br />(per 100&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_whbonds %> (<%= "%.2f" % @scop.stddev_dna_interface_whbonds %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_whbonds %> (<%= "%.2f" % @scop.stddev_rna_interface_whbonds %>)</td>
  </tr>

  <tr>
    <th>Average<br />van der Waals contacts<br />(per 100&Aring;<sup>2</sup>)</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_contacts %> (<%= "%.2f" % @scop.stddev_dna_interface_contacts %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_contacts %> (<%= "%.2f" % @scop.stddev_rna_interface_contacts %>)</td>
  </tr>

  <tr>
    <th>Average<br />Polarity</th>
    <td><%= "%.2f" % @scop.mean_dna_interface_polarity %> (<%= "%.2f" % @scop.stddev_dna_interface_polarity %>)</td>
    <td><%= "%.2f" % @scop.mean_rna_interface_polarity %> (<%= "%.2f" % @scop.stddev_rna_interface_polarity %>)</td>
  </tr>

</table>

<small>* number in a bracket: standard deviation</small>
