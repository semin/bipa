<div class="list blue_link">
  <div class="list_title">
    <%= link_to "#{@interface_search.interface_type}-Binding Interface of #{interface.domain.sid}", interface_path(interface) %>
  </div>
  <div class="list_content">
    ASA: <%= interface.asa %> &Aring;<sup>2</sup><br />
    Polarity: <%= interface.polarity %><br />
    No. of Residues: <%= interface.residues_count %><br />
    No. of Atoms: <%= interface.atoms_count %><br />
  </div>
  <div class="list_content2">
    No. of Hydrogen Bonds: <%= interface.hbonds_count %><br />
    No. of Water-mediated Hydrogen Bonds: <%= interface.whbonds_count %><br />
    No. of van der Waals Contacts: <%= interface.vdw_contacts_count %>
  </div>
</div>
