<!DOCTYPE HTML PUBLIC "-//W4C//DTD XHTML 1.0 Transitional//EN"> 
<html>
  <head>
    <title>
      <%= @page_title || "Welcome to BIPA!" %>
    </title>

    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery-1.2.5.pack" %>

    <%= stylesheet_link_tag "bipa.css" %>
    <%= stylesheet_link_tag "will_paginate.css" %>

    <script type="text/javascript">
      var $j = jQuery.noConflict();
      $j(document).ready(function() {
        $j("#notice").fadeOut(6500);
      });
    </script>
  </head>

  <body>
    <div id="wrapper">
      <%= content_tag("div", flash[:notice], :class => "notice", :id => "notice") if flash[:notice] %>
      <div id="header"> 
        <div id="header_menu">
          <%= link_to "Home", "/" %>
          |
          <%= link_to "Browse", scops_path %>
          |
          <%= link_to "Statistics", "/" %>
          |
          <div class="search_form">
            <% form_tag(search_scops_path, :method => "get", :class => "search_form") do %>
              <%= select_tag(:search_model, options_for_select(%w{ PDB SCOP GO TAXNOMY })) -%>
              <%= text_field_tag :query, nil, :size => 20 %>
              <%= submit_tag "Search", :name => nil %>
            <% end %>
          </div>
        </div>
        <div id="main_banner">
          BIPA
        </div>
        <div id="sub_banner">
          : <u>B</u>iological database for <u>I</u>nteraction between <u>P</u>rotein and nucleic <u>A</u>cid
        </div>
      </div>

      <div id="middler">
        <div id="main_title">
          <%= yield :main_title %>
        </div>
        <div id="main_content">
          <%= yield :layout %>
        </div>
      </div>

      <div id="footer">
        &copy; 2008 <%= link_to "Semin Lee", "/contact" %>, <%= link_to "Blundell Group", "http://www-cryst.bioc.cam.ac.uk" %>, <%= link_to "Department of Biochemistry", "http://www.bioc.cam.ac.uk" %>, <%= link_to "University of Cambridge", "http://www.cam.ac.uk" %>, UK
      </div>
    </div>
  </body>
</html>
