<!DOCTYPE HTML PUBLIC "-//W4C//DTD XHTML 1.0 Transitional//EN"> 
<html>
  <head>
    <title>
      <%= @page_title || "Welcome to BIPA!" %>
    </title>

    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery-1.2.6.min" %>
    <%= javascript_include_tag "jquery.corner" %>
    <%= javascript_include_tag "superfish" %>
    <%= javascript_include_tag "fancyzoom" %>
    <%= javascript_include_tag "jmol/Jmol" %>

    <%= stylesheet_link_tag "bipa" %>
    <%= stylesheet_link_tag "will_paginate" %>
    <%= stylesheet_link_tag "superfish" %>

    <script type="text/javascript">
      var $j = jQuery.noConflict();
      $j(document).ready(function() {
        $j("#notice").fadeOut(6500);
        $j("ul.sf-menu").superfish();
        $j("#home_intro").corner("round");
        $j("#home_news").corner("round");
        $j("#home_reference").corner("round");
        $j("#mol_month2").corner("round");
      });
    
      FancyZoomBox.directory = '/images';
      $(document).observe('dom:loaded', function() {
        new FancyZoom('abstract_link', {width:400, height:300});
        new FancyZoom('scop_na_box_link', {width:400, height:150});
        new FancyZoom('dna_rep_alignment_na_box_link', {width:400, height:150});
        new FancyZoom('rna_rep_alignment_na_box_link', {width:400, height:150});
        new FancyZoom('dna_sub_alignment_na_box_link', {width:400, height:150});
        new FancyZoom('rna_sub_alignment_na_box_link', {width:400, height:150});
      });
    </script>
  </head>

  <body>
    <%= content_tag("div", flash[:notice], :class => "notice", :id => "notice") if flash[:notice] %>
    <div id="wrapper">
      <div id="header"> 
        <ul id="header_menu" class="sf-menu">
          <li class="current">
            <%= link_to "Home", "/" %>
          </li>
          <li>
            <%= link_to "Browse", "#" %>
            <ul>
              <li>
                <%= link_to "PDB", structures_path %>
              </li>
              <li>
                <%= link_to "SCOP", hierarchy_scop_path(Scop.root) %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to "Statistics", "/statistics" %>
          </li>
          <li>
            <%= link_to "FUGUE-na", "/fugue" %>
          </li>
          <li>
            <%= link_to "Help", "/help" %>
          </li>
          <li>
            <%= link_to "Contact", "/contact" %>
          </li>
        </ul>
        <div id="header_search">
          <% form_tag(search_scops_path, :method => "get", :class => "search_form") do %>
            <%= select_tag(:search_model, options_for_select(%w{ PDB SCOP GO TAXONOMY })) %>
            <%= text_field_tag :query, nil, :size => 20 %>
            <%= submit_tag "Search", :name => nil %>
          <% end %>
        </div>
        <div id="main_banner">
          BIPA
        </div>
        <div id="sub_banner">
          : <u>B</u>iological database for <u>I</u>nteraction between <u>P</u>rotein and nucleic <u>A</u>cid
        </div>
      </div>

      <div id="middler">
        <%= yield :layout %>
      </div>

      <div id="footer" class="black_link">
        &copy; 2008 <%= link_to "Semin Lee", "/contact" %>, <%= link_to "Blundell Group", "http://www-cryst.bioc.cam.ac.uk" %>, <%= link_to "Department of Biochemistry", "http://www.bioc.cam.ac.uk" %>, <%= link_to "University of Cambridge", "http://www.cam.ac.uk" %>, UK
      </div>
    </div>
  </body>
</html>
