<div class="main_title">
  Jmol view: <%= @structure.pdb_code %>
</div>

<div id="jmol">
  <applet code="<%= REL_URL_ROOT %>/javascripts/jmol/JmolAppletSigned.jar" width=500 height=500 align=center>
    <PARAM name="load" value="../../pdb/<%= @structure.pdb_code.downcase %>.pdb">
    <PARAM name="java_code" value="JmolApplet">
    <PARAM name="java_archive" value="/javascripts/jmol/JmolAppletSigned.jar">
    <PARAM name="type" value="application/x-java-applet;version=1.1">
    <PARAM name="script" value="select all;spacefill off; wireframe off;cartoon;color cartoon chain;select ligand;wireframe 40;spacefill 120;">
    <PARAM name="progressbar" value="true">
    <PARAM name="progresscolor" value="blue">
    <PARAM name="boxmessage" value="Jmol applet is loading the selected PDB structure">
    <PARAM name="boxbgcolor" value="black">
    <PARAM name="boxfgcolor" value="white">
  </applet>
</div>

<%= link_to "Back to the structure", structure_path(@structure) %>
